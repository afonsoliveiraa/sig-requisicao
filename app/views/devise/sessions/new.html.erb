<div class="min-h-screen flex items-center justify-center mt-10">
  <div class="max-w-md w-full bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl mb-6 text-center"></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6">
        
        <div class="relative z-0 w-full group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " " , 
              class: "block py-2.5 px-0 w-full text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer" %>
          <%= f.label :email, "Email", 
              class: "absolute text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-placeholder-shown:top-6 peer-focus:-translate-y-6 peer-focus:scale-75 peer-focus:top-3 peer-focus:text-blue-600" %>
        </div>

        <div class="relative z-0 w-full group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: " ",
              class: "block py-2.5 px-0 w-full text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer" %>
          <%= f.label :password, "Senha",
              class: "absolute text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-placeholder-shown:top-6 peer-focus:-translate-y-6 peer-focus:scale-75 peer-focus:top-3 peer-focus:text-blue-600" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-sm font-medium text-blue-600 hover:underline" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in",
              class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        </div>

      </div>
    <% end %>

    <div class="mt-4 text-sm font-light text-gray-500 text-center">
      Donâ€™t have an account yet?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
